<Page x:Class="ZuevISP11_12.Windows.Frame.DoctorRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZuevISP11_12.Windows.Frame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorRecord">

    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Top" Width="Auto" Grid.Column="1" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО пациента" Width="250" DisplayMemberBinding="{Binding PatientId}" x:Name="lvPatientId"/>
                    <GridViewColumn Header="Время" Width="250" DisplayMemberBinding="{Binding DateTime}" x:Name="lvDateTime"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
